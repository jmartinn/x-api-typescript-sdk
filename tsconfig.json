{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./build"
  },
  "include": ["src/**/*"],
  "exclude": ["build", "node_modules", "examples/*", "scripts/*"]
}
